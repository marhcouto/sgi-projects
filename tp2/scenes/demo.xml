<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="3" y="3" z="3" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/SGI_TP1_XML_T03_G11/metal_stripes.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoSphere">
            <sphere radius="2" slices="100" stacks="100"/>
        </primitive>
    </primitives>

    <animations>
        <keyframeanim id="ufoMovement">
            <keyframe instant="1">
                <translation x="0" y="0" z="0" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale sx="1" sy="1" sz="1" />
            </keyframe>

            <keyframe instant="5">
                <translation x="10" y="10" z="10" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale sx="2" sy="2" sz="2" />
            </keyframe>

            <keyframe instant="10">
                <translation x="-10" y="5" z="10" />
                <rotation axis="z" angle="0" />
                <rotation axis="y" angle="0" />
                <rotation axis="x" angle="0" />
                <scale sx="2" sy="2" sz="2" />
            </keyframe>
        </keyframeanim>

        
    </animations>

    <components>
        <component id="demoRoot">
            <transformation>
                <scale x="1" y="0.3" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
            <animation id="ufoMovement" />
        </component>
    </components>
</sxs>