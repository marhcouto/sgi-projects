<sxs>
    <scene root="sceneRoot" axis_length="5"/>

    <views default="topView">
        <perspective id="customerView" near="0.1" far="500" angle="50">
            <from x="0" y="6" z="20" />
            <to x="0" y="5" z="-20" />
        </perspective>

        <perspective id="topView" near="0.1" far="100" angle="50">
            <from x="0" y="8" z="15" />
            <to x="0" y="-2" z="-5" />
        </perspective>

        <ortho id="orthoView"  near="0.1" far="500" left="1" right="1" top="1" bottom="1" >
            <from x="0" y="6" z="20" />
            <to x="0" y="5" z="-20" />
            <up x="0" y="6" z="-10"/>
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <spot id="pasteryLight" enabled="1" angle="30" exponent="0.5">
            <location x="6" y="8" z="-5" w="0.5" />
            <target x="6" y="0" z="-5" />
            <ambient r="0.0" g="0.0" b="0.0" a="0.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="0.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation quadratic="1" />
        </spot>

        <omni id="rightSideLight" enabled="1">
            <location x="10" y="6" z="0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation quadratic="1" />
        </omni>

        <omni id="topLight" enabled="1">
            <location x="0" y="12" z="0" w="0.5" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation quadratic="1" />
        </omni>

        <omni id="leftSideLight" enabled="1">
            <location x="-10" y="6" z="0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation quadratic="1" />
        </omni>
    </lights>

    <textures>
        <texture id="wallTexture" file="scenes/images/testScene/wall-texture.png" />
        <texture id="floorTexture" file="scenes/images/testScene/floor-texture.jpg" />
        <texture id="donutPink" file="scenes/images/testScene/donut-pink.jpg" />
        <texture id="donutChoc" file="scenes/images/testScene/donut-choc.jpg" />
        <texture id="ceilingPaint" file="scenes/images/testScene/ceiling.jpg" />
        <texture id="stainlessSteel" file="scenes/images/testScene/stainless-steel.jpg" />
    </textures>

    <materials>
        <material id="pink" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.7" g="0.3" b="0.5" a="1.0" />
            <diffuse r="0.7" g="0.3" b="0.5" a="1.0" />
            <specular r="0.4" g="0.1" b="0.3" a="1.0" />
        </material>

        <material id="ceilingWhite" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="0.0" />
        </material>

        <material id="wallMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.8" g="0.8" b="0.6" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.6" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>

        <material id="whitePaintedMetal" shininess="10">
            <emission r="0.2" g="0.2" b="0.2" a="1.0" />
            <ambient r="0.9" g="0.9" b="0.7" a="1" />
            <diffuse  r="0.6" g="0.6" b="0.5" a="1.0" />
            <specular  r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="blackMate" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>

        <material id="basePastery" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.7" g="0.5" b="0.5" a="1" />
            <diffuse r="0.7" g="0.5" b="0.2" a="1.0" />
            <specular r="0.2" g="0.1" b="0" a="1.0" />
        </material>

    </materials>

    <transformations>
        <!-- This transformation simply makes the unit square the size of a wall/floor -->
        <transformation id="unitSquareToWall">
            <scale x="20" y="12" z="1" />
        </transformation>

        <transformation id="unitSquareToFloorCeiling">
            <scale x="20" y="1" z="20" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="square">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
        </primitive>

        <primitive id="fornitureSide">
            <rectangle x1="-0.5" y1="0" x2="0.5" y2="1"/>
        </primitive>

        <primitive id="fridgeSideTriangle">
            <triangle x1="0" y1="-0.5" z1="0"
                x2="1" y2="-0.5" z2="0"
                x3="1" y3="1" z3="0" />
        </primitive>

        <primitive id="fridgeSideTriangleOpposite">
            <triangle x1="0" y1="-0.5" z1="0"
                x2="1" y2="1" z2="0"
                 x3="1" y3="-0.5" z3="0" />
        </primitive>

        <primitive id="donut">
            <torus inner="0.125" outer="0.2" slices="100" loops="100"/>
        </primitive>

        <primitive id="tipJar">
            <cylinder base="0.3" top="0.3" height="0.6" slices="100" stacks="50"/>
        </primitive>

        <primitive id="berlinBall">
            <sphere radius="0.3" slices="25" stacks="25"/>
        </primitive>
    </primitives>

    <components>
        <!-- Base components -->

        <!-- Cube -->
        <component id="top">
            <transformation>
                <translate x="0" y="1" z="0" />
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="base">
            <transformation>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="front">
            <transformation>
                <translate x="0" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="left">
            <transformation>
                <translate x="-0.5" y="0.5" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="right">
            <transformation>
                <translate x="0.5" y="0.5" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="back">
            <transformation>
                <translate x="0" y="0.5" z="-0.5" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cube">
            <transformation/>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="base"/>
                <componentref id="top"/>
                <componentref id="back" />
                <componentref id="left" />
                <componentref id="right" />
                <componentref id="front" />
            </children>
        </component>
        <!-- Cube -->
        <!-- Base components -->

        <!-- Walls -->
        <component id="ceiling">
